/* ===== FORMULÁRIO DE AGENDAMENTO DE CASTRAÇÃO ===== */
.sterilization-schedule-form {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

/* Seções do formulário */
.form-section {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.form-section h3 {
  color: var(--p-primary-color);
  margin: 0;
  font-size: 1.2rem;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.form-section h3 i {
  font-size: 1.1rem;
}

/* Informações do gato */
.cat-info-display {
  display: flex;
  gap: 1rem;
  align-items: flex-start;
  padding: 1rem;
  background: var(--p-surface-section);
  border: 1px solid var(--p-surface-border);
  border-radius: 8px;
}

.cat-photo {
  flex-shrink: 0;
  width: 80px;
  height: 80px;
  border-radius: 8px;
  overflow: hidden;
  background: var(--p-surface-100);
  display: flex;
  align-items: center;
  justify-content: center;
}

.cat-photo img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cat-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.cat-details h4 {
  margin: 0;
  color: var(--p-text-color);
  font-size: 1.1rem;
  font-weight: 600;
}

.cat-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
}

.cat-info-item {
  display: flex;
  align-items: center;
  gap: 0.25rem;
  color: var(--p-text-color-secondary);
  font-size: 0.9rem;
}

.cat-info-item i {
  color: var(--p-primary-color);
  font-size: 0.8rem;
}

/* Grid do formulário */
.form-grid {
  display: grid;
  gap: 1.5rem;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
}

.form-field-full {
  grid-column: 1 / -1;
}

/* Campos do formulário */
.form-field {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.form-field label {
  color: var(--p-text-color);
  font-weight: 500;
  font-size: 0.9rem;
}

.form-input,
.form-textarea {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid var(--p-surface-border);
  border-radius: 6px;
  background: var(--p-surface-0);
  color: var(--p-text-color);
  font-size: 0.9rem;
  transition: border-color 0.2s, box-shadow 0.2s;
}

.form-input:focus,
.form-textarea:focus {
  outline: none;
  border-color: var(--p-primary-color);
  box-shadow: 0 0 0 0.2rem var(--p-primary-color-light);
}

.form-input.ng-invalid.ng-touched,
.form-textarea.ng-invalid.ng-touched {
  border-color: var(--p-red-500);
}

.form-textarea {
  resize: vertical;
  min-height: 80px;
  font-family: inherit;
}

.datetime-input {
  font-family: inherit;
}

/* Mensagens de ajuda e erro */
.field-help {
  color: var(--p-text-color-secondary);
  font-size: 0.8rem;
  margin-top: 0.25rem;
}

.error-message {
  color: var(--p-red-500);
  font-size: 0.8rem;
  margin-top: 0.25rem;
  display: flex;
  align-items: center;
  gap: 0.25rem;
}

/* Responsividade */
@media (max-width: 768px) {
  .cat-info-display {
    flex-direction: column;
    text-align: center;
  }
  
  .cat-photo {
    width: 100px;
    height: 100px;
    align-self: center;
  }
  
  .cat-meta {
    justify-content: center;
  }
  
  .form-grid {
    grid-template-columns: 1fr;
  }
}
  color: white;
}

::ng-deep .sterilization-schedule-dialog .p-dialog-header .p-dialog-header-icon {
  color: white;
}

::ng-deep .sterilization-schedule-dialog .p-dialog-content {
  padding: 2rem;
  border-radius: 0;
  background: var(--p-surface-card) !important;
  margin-bottom: 0;
}

::ng-deep .sterilization-schedule-dialog .p-dialog-footer {
  background: var(--p-surface-card) !important;
  border-radius: 0 0 12px 12px;
  border-top: 1px solid var(--p-surface-border);
  margin-top: 0;
  padding: 0.75rem 2rem;
}

.sterilization-schedule-form {
  padding: 0;
}

/* Form Sections */
.form-section {
  margin-bottom: 1.5rem;
}

.form-section h3 {
  color: #374151;
  font-size: 1.1rem;
  font-weight: 600;
  margin-bottom: 1rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.form-section h3 i {
  color: #6366f1;
  font-size: 1rem;
}

/* Cat Info Display */
.cat-info-display {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem;
  background: var(--p-surface-50);
  border: 1px solid var(--p-surface-border);
  border-radius: 8px;
}

.cat-photo {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  overflow: hidden;
  background: var(--p-surface-200);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.cat-photo img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cat-details h4 {
  margin: 0 0 0.5rem 0;
  color: var(--p-text-color);
  font-size: 1.1rem;
  font-weight: 600;
}

.cat-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
}

.cat-info-item {
  display: flex;
  align-items: center;
  gap: 0.25rem;
  font-size: 0.875rem;
  color: var(--p-text-color-secondary);
}

.cat-info-item i {
  color: var(--p-primary-color);
  font-size: 0.75rem;
}

/* Form Grid */
.form-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
}

.form-field-full {
  grid-column: 1 / -1;
}

@media (max-width: 768px) {
  .form-grid {
    grid-template-columns: 1fr;
  }
  
  .form-field-full {
    grid-column: 1;
  }
  
  .cat-info-display {
    flex-direction: column;
    text-align: center;
  }
  
  .cat-meta {
    justify-content: center;
  }
}

/* Form Fields */
.form-field {
  display: flex;
  flex-direction: column;
}

.form-field label {
  font-weight: 500;
  color: #374151;
  margin-bottom: 0.5rem;
  font-size: 0.875rem;
}

.form-input {
  padding: 0.75rem;
  border: 1px solid #d1d5db;
  border-radius: 6px;
  font-size: 0.875rem;
  transition: all 0.2s ease;
  background: white;
}

.form-input:focus {
  outline: none;
  border-color: #6366f1;
  box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
}

.form-input.ng-invalid.ng-touched {
  border-color: #ef4444;
  box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
}

.datetime-input {
  color-scheme: light;
}

.form-textarea {
  padding: 0.75rem;
  border: 1px solid #d1d5db;
  border-radius: 6px;
  font-size: 0.875rem;
  transition: all 0.2s ease;
  background: white;
  resize: vertical;
  min-height: 80px;
}

.form-textarea:focus {
  outline: none;
  border-color: #6366f1;
  box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
}

/* Custom PrimeNG Select Styles - Removido pois não usamos mais select */

/* Error Messages */
.error-message {
  color: #ef4444;
  font-size: 0.75rem;
  margin-top: 0.25rem;
  display: block;
}

/* Field Help */
.field-help {
  color: var(--p-text-color-secondary);
  font-size: 0.75rem;
  margin-top: 0.25rem;
  display: block;
}

/* Dialog Footer */
.dialog-footer {
  display: flex;
  justify-content: flex-end;
  padding: 0;
  margin: 0;
}

.action-buttons {
  display: flex;
  gap: 0.75rem;
}

/* Button Customizations */
::ng-deep .p-button {
  padding: 0.625rem 1.25rem;
  font-size: 0.875rem;
  border-radius: 6px;
  font-weight: 500;
  transition: all 0.2s ease;
}

::ng-deep .p-button.p-button-secondary {
  background: transparent;
  border: 1px solid #d1d5db;
  color: #374151;
}

::ng-deep .p-button.p-button-secondary:hover {
  background: #f9fafb;
  border-color: #9ca3af;
}

::ng-deep .p-button.p-button-success {
  background: #059669;
  border: 1px solid #059669;
}

::ng-deep .p-button.p-button-success:hover {
  background: #047857;
  border-color: #047857;
}

::ng-deep .p-button:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

/* Responsive Design */
@media (max-width: 640px) {
  ::ng-deep .sterilization-schedule-dialog .p-dialog {
    margin: 1rem;
    width: calc(100vw - 2rem) !important;
    max-width: none !important;
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  ::ng-deep .p-button {
    width: 100%;
    justify-content: center;
  }
}

/* Loading State */
::ng-deep .p-button .p-button-loading-icon {
  margin-right: 0.5rem;
}

/* Divider Customization */
::ng-deep .p-divider {
  margin: 1.5rem 0;
}

::ng-deep .p-divider .p-divider-content {
  background: var(--p-surface-card);
}

/* Form validation states */
.form-field.ng-touched .form-input.ng-invalid,
.form-field.ng-touched .form-textarea.ng-invalid {
  animation: shake 0.5s ease-in-out;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  10%, 30%, 50%, 70%, 90% { transform: translateX(-2px); }
  20%, 40%, 60%, 80% { transform: translateX(2px); }
}

/* Focus styles for accessibility */
.form-input:focus-visible,
.form-textarea:focus-visible {
  outline: 2px solid #6366f1;
  outline-offset: 2px;
}

/* Blur Backdrop */
:host ::ng-deep .blur-backdrop {
  backdrop-filter: blur(8px);
  background: rgba(0, 0, 0, 0.4);
}

/* High contrast support */
@media (prefers-contrast: high) {
  .form-input,
  .form-textarea {
    border-width: 2px;
  }
  
  .error-message {
    font-weight: 600;
  }
}

/* ===== CORES E TEMAS ===== */
:host {
  --primary-color: var(--p-primary-color, #F2BBAE);
  --text-color: var(--p-text-color, #1f2937);
  --text-color-secondary: var(--p-text-color-secondary, #6b7280);
  --surface-card: var(--p-surface-card, #ffffff);
  --surface-border: var(--p-surface-border, #e5e7eb);
  --surface-ground: var(--p-surface-ground, #f9fafb);
  --surface-50: var(--p-surface-50, #f8fafc);
  --surface-200: var(--p-surface-200, #e2e8f0);
  --gradient-primary: linear-gradient(135deg, var(--p-primary-color, #F2BBAE) 0%, var(--p-primary-600, #E5A693) 100%);
}
